<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.house.mapper.OrderMapper">
    <insert id="insertItem" parameterType="orders">
        insert into orders(id,user_id,house_id,price,months,confirmed,note)
        values (#{id},#{userId},#{houseId},#{price},#{months},#{confirmed},#{note});
    </insert>

    <select id="listOrders" resultType="orders">
        select *
        from orders
        where user_id=#{userId};
    </select>


</mapper>